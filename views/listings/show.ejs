<%- layout('./layouts/boilerplate') %>
<script>
  const maptoken = "<%= process.env.MAP_TOKEN %>";
  const data = JSON.parse('<%- JSON.stringify(data) %>');
</script>
    <body>
        <div class="row mt-3 ">
            <div class="col-8 offset-2">
                <h1>
                    <%=data.title %>
                </h1>
            </div>

            <div class="card col-6 offset-2 listing-card">
                <img src="<%= data.image.url %>" class="card-img-top show-img mt-3" alt="listing image">
                <div class="card-body">
                    <div class="card-text mt-3">
                        <p>
                            owned by <%= data.owner.username %>
                        </p>

                        <p>
                            <%= data.description %>
                        </p>
                        <p> &#8377 <%= data.price.toLocaleString("en-IN") %>
                        </p>
                        <p>
                            <%= data.location %>
                        </p>
                        <p>
                            <%= data.country %>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Buttons aligned with card -->
            <% if(curr&&data.owner._id.equals(curr._id)){ %>

                <div class="d-flex justify-content-between mt-3">
                    <a href="/listings/<%= data._id %>/edit"><button class="btn btn-outline-info">Edit</button></a>
                    <form method="post" action="/listings/<%= data._id %>?_method=DELETE">
                        <button class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
                <% } %>


                    <div class="col-8 offset-2 mb-3">
                        <hr>
                        <% if(curr){ %>
                            <h2>leave you review</h2>
                            <form action="/listings/<%= data._id %>/review" method="post" novalidate
                                class="needs-validation">
                                <div class="mb-3 mt-3">
                                    <label for="rating" class="form-label">Rating</label>
                                    <fieldset class="starability-slot">

                                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                            id="rating" value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="review[rating]" id="rating"
                                            value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="review[rating]" id="rating"
                                            value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="review[rating]" id="rating"
                                            value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="review[rating]" id="rating"
                                            value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="review[rating]" id="rating"
                                            value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label for="comment" class="form-label">comment</label>
                                    <textarea name="review[comment]" id="comment" rows="10" cols="30"
                                        class="form-control" required></textarea>
                                    <div class="invalid-feedback">Please add some comments.</div>
                                </div>
                                <button class="btn btn-outline-success">submit</button>
                                <hr>
                            </form>
                            <% } %>



                                <% if(data.review.length>0){ %>
                                    <div class="row ">
                                        <h4>All reviews</h4>
                                        <% for(let r of data.review){ %>
                                            <div class="card col-5 ms-3 mb-3">
                                                <div class="card-body">
                                                    <h5 class="card-title"><b>@<%=r.auther.username %></b></h5>
                                                    <p class="starability-result card-text"
                                                        data-rating="<%= r.rating %>">
                                                    </p>
                                                    <p class="card-text">
                                                        <%= r.comment %>
                                                    </p>

                                                    <% if(curr&&r.auther._id.equals(curr._id)){ %>
                                                        <form
                                                            action="/listings/<%= data._id%>/review/<%=r._id%>?_method=DELETE"
                                                            method="POST" class="mb-3">
                                                            <button class="btn btn-dark btn-sm ">Delete</button>
                                                        </form>
                                                        <% } %>
                                                </div>



                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>



                    </div>
                    <div class="col-6 offset-2 mb-3">
                        <h1>Where you will be</h1>
                        <div id="map"></div>
                    </div>

        </div>
   




    </body>
        

<script src="/javascript/map.js"></script>




<%- layout('./layouts/boilerplate') %>

<div class="container my-5" id="ownerpage">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      <!-- Owner Profile Card -->
      <div class="card shadow-lg border-0 rounded-4 p-5 mb-5 text-center">

  <!-- Profile Image -->
          <div class="text-center mb-4">
            <img src="<%= user.image && user.image.url ? user.image.url : '/images/default.jpg' %>"
              class="profile-img rounded-circle shadow-sm" alt="Owner Picture">
          </div>
        <!-- Owner Info -->
        <h2 class="fw-bold mb-1"><%= user.username %></h2>
        <p class="text-muted fs-6 mb-3"><i class="bi bi-geo-alt"></i> <%= user.location || 'Location not provided' %></p>

        <!-- Bio -->
        <h5 class="fw-semibold mb-1">About <%= user.username %></h5>
        <p class="text-muted fs-6 px-3 mb-4">
          <%= user.bio?.trim() || 'This host has not added a bio yet.' %>
        </p>

        <!-- Stats Section -->
        <div class="d-flex justify-content-center flex-wrap gap-3">
          <div class="card text-center shadow-sm rounded-3 p-3" style="width: 100px;">
            <h4 class="fw-bold mb-1"><%= userslisting?.length || 0 %></h4>
            <p class="text-muted small mb-0">Listings</p>
          </div>
          <div class="card text-center shadow-sm rounded-3 p-3" style="width: 100px;">
            <h4 class="fw-bold mb-1"><%= reviewsCount || 0 %></h4>
            <p class="text-muted small mb-0">Reviews</p>
          </div>
        </div>

      </div>

      <!-- Profile Listings Section -->
      <h4 class="mb-4 fw-bold" style="color: #000;">Listings by <%= user.username %></h4>

      <% if (userslisting && userslisting.length> 0) { %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
          <% userslisting.forEach(listing => { %>
            <div class="col d-flex">
              <div class="card shadow-sm border-0 rounded-4 w-100 h-100">
                <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark h-100 d-flex flex-column">

                  <!-- Image -->
                  <div class="overflow-hidden" style="height: 180px;">
                    <img src="<%= listing.image?.url || '/images/default.jpg' %>" 
                         class="card-img-top img-fluid rounded-top" 
                         alt="Listing Image" 
                         style="object-fit: cover; height: 100%; width: 100%;">
                  </div>

                  <!-- Card Body -->
                  <div class="card-body d-flex flex-column justify-content-between p-3">
                    <div>
                      <h5 class="card-title text-truncate fw-semibold mb-2"><%= listing.title %></h5>
                      <p class="card-text text-muted small mb-0"><i class="bi bi-geo-alt-fill"></i> <%= listing.location %></p>
                    </div>
                    <a href="/listings/<%= listing._id %>" class="btn w-100 fw-bold mt-3" style="background-color: #FF385C; color: #fff; border: none;">View Listing</a>
                  </div>

                </a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-muted fs-5">No listings yet.</p>
      <% } %>

    </div>
  </div>
</div>






